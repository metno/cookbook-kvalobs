#synopdi, tmpdir and logdir must be an absolute path
synopdir="/var/lib/kvalobs/synopreports"
tmpdir="/var/lib/norcom2kv/tmp"
logdir="/var/log/kvalobs"

#loglevel and tracelevel: FATAL, ERROR, WARN, INFO, DEBUG
#defult loglevel=INFO og tracelevel=DEBUG
loglevel=INFO
tracelevel=DEBUG

ignore_files_before_startup=false

#raports format. "raport_type:decoder".
#Valid raport types: SYNOP, METAR, AREP, BATH, DRAU, PILO, TEMP, TIDE, bufr
#We have only decoders for SYNOP (synop), TEMP (temp) and bufr (bufr_surface).

raports=( "SYNOP:synop" )

corba{
   #CORBA nameserver to be used.
   nameserver="<%= node['met-kvalobs']['corba']['nameserver']['host']%>"

   #Which kvalobs server is the monitored production server that
   #is monitored by the operators. We have to register whit this server
   #so we too are monitored.
   path="<%= node['met-kvalobs']['corba']['nameserver']['path']%>"

   #Which kvalobs servers shall we send observations to.
   kvservers=("<%= node['met-kvalobs']['corba']['nameserver']['path']%>")

}
